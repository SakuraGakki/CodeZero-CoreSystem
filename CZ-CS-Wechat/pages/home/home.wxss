.dog-eared-tip{
    padding: 7.5px 5px 7.5px 20px;
    background-image: url("https://www.codezer0.cn:8011/images/wechatApp/calenderBG.jpeg");
    background-size: cover;  
    font-size: 13px;
    position: absolute;
    text-align: center;
    left: 10%;
    width: 75%;
    margin-bottom: 100px;
    color: black;
}
.dog-eared-tip:before, .work_tip:after {
    content: "";
    position: absolute;
    z-index: -2;
    -moz-transform: rotate(-4deg);
    -webkit-transform: rotate(-4deg);
    -o-transform: rotate(-4deg);
    -ms-transform: rotate(-4deg);
    transform: rotate(-4deg);
    bottom: 15px;
    box-shadow: 0 15px 10px rgba(0, 0, 0, 0.7);
    height: 50%;
    left: 10px;
    max-height: 100px;
    max-width: 300px;
    width: 50%;
}
.dog-eared-tip:after {
    -moz-transform: rotate(4deg);
    -webkit-transform: rotate(4deg);
    -o-transform: rotate(4deg);
    -ms-transform: rotate(4deg);    
    transform: rotate(4deg);
    left: auto;
    right: 10px;
}
